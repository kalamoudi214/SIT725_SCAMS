<%- include ('./partials/head.ejs') %>
  <!-- Embedded Javascreipt -->
  <title>Sign In</title>
  <script>
    if(localStorage.getItem('csams'))
    {
      window.location.href = '/home'
    }
  </script>
  <%- include ('./partials/navbar.ejs') %>
  </head>

  <body>

    <div class="registration-section"><h2 style="text-align: center;">Login</h2></div>
    <div class="jumbotron registration-section">
      <form action="/user/login" method="post">
        <div class="form-group">
          <label >Email address</label>
          <input type="email" class="form-control" name="email" id="email" 
            placeholder="Enter email">
         
        </div>
        <div class="form-group">
          <label >Password</label>
          <input  name="password" type="password" class="form-control"  placeholder="Password">
        </div>
        
        <button type="submit"  class="btn btn-primary">Submit</button>
        <%
        if(data.error)
        { %>
            <p  style="margin-top: 20px;" class="alert alert-danger"><%=data.error%></p>
       <% }%>

       <%
       if(data.success)
       { %>
           <p  style="margin-top: 20px;" class="alert alert-success"><%=data.success%></p>
           <script>
             localStorage.setItem('csams','login')
             window.location.href = '/home'
           </script>
      <% }%>

      </form>

      
    </div>

  </body>

  <script>

  </script>

  </html>