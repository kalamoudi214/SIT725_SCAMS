<%- include ('./partials/head.ejs') %>
    <!-- Embedded Javascreipt -->
    <title>Material</title>
    <script>
        if(!localStorage.getItem('csams'))
        {
          window.location.href = '/'
        }
      </script>

</head>
<body>
  <%- include ('./partials/homeNavbar.ejs') %>

   <h1 style="text-align: center; margin:30px 0px">Material</h1>
  <div class="tab">
    <button class="tablinks" onclick="tabChange(event, 'view')">View Material</button>
    <button class="tablinks" onclick="tabChange(event, 'create')">Add Material</button>
    
  </div>

<%if(data.success)
{
    console.log('data',data) %>
    <p  style="margin-top: 20px;"  id="msg" class="alert alert-success"><%=data.success%></p>
<% }%>
<%if(data.error)
{
    console.log('data',data) %>
    <p  style="margin-top: 20px;"  id="msg" class="alert alert-danger"><%=data.error%></p>
<% }%>
  <div id="view" class="tabcontent">
    <h3>Material list will be shown here</h3>
    
  </div>
  
  <div id="create" class="tabcontent">
    <div class="registration-section"><h2 style="text-align: center;">Add Material</h2></div>
    <div class="jumbotron registration-section">
      <form action="/material/create" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label >Material Name</label>
          <input type="text" class="form-control" name="name" id="name" 
            placeholder="Enter department name">
        </div>
        <div class="form-group">
            <label >Material File</label>
            <input type="file" class="form-control" name="file" id="file" 
              placeholder="Enter Material name">
            
          </div>

          <div class="form-group">
            <label >Category</label>
            <select class="form-select" name="category"  >
              <option selected>Select Category</option>
              <% if(data.category) {
                console.log('category',data)
                for(var i=0;i < data.category.length ; i++) {
                  console.log(data.category[i].name ) %>
              <option value= '<%= data.category[i].name %>'><%= data.category[i].name %></option>
              <% }} %>
            </select>
          </div>
        <div class="form-group">
          <label >Description</label>
          <input  name="description" type="text-area" class="form-control"  placeholder="Enter description">
        </div>
        
        <button type="submit"  class="btn btn-primary">Submit</button>
        <!-- <%
        if(data.error)
        { %>
            <p  style="margin-top: 20px;" class="alert alert-danger"><%=data.error%></p>
       <% }%> -->
      </form>

      
    </div>
  </div>
  

  
  <script>
  function tabChange(evt, action) {
      $('#msg').css('display','none')
    var i, tabcontent, tablinks;
    tabcontent = document.getElementsByClassName("tabcontent");
    for (i = 0; i < tabcontent.length; i++) {
      tabcontent[i].style.display = "none";
    }
    tablinks = document.getElementsByClassName("tablinks");
    for (i = 0; i < tablinks.length; i++) {
      tablinks[i].className = tablinks[i].className.replace(" active", "");
    }
    document.getElementById(action).style.display = "block";
    evt.currentTarget.className += " active";
  }
  </script>
</body>
</html>