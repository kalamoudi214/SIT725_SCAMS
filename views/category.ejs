<%- include ('./partials/head.ejs') %>
    <!-- Embedded Javascreipt -->
    <title>Category</title>
 <!--This script tag is used to maintain session using localstorage-->
    <script>
        if(!localStorage.getItem('csams'))
        {
          window.location.href = '/'
        }

        
      </script>
 
</head>
<body>
  <%- include ('./partials/homeNavbar.ejs') %>

   <h1 style="text-align: center; margin:30px 0px">Category</h1>
  <div class="tab">
    <button class="tablinks" onclick="tabChange(event, 'view')">View Category</button>
    <button  id="admin" class="tablinks"data-toggle="modal" data-target="#exampleModal">Create Category</button>
    
  </div>

<%if(data.success)
{
    console.log('data',data) %>
    <p  style="margin-top: 20px;"  id="msg" class="alert alert-success"><%=data.success%></p>
<% }%>
<%if(data.error)
{
    console.log('data',data) %>
    <p  style="margin-top: 20px;"  id="msg" class="alert alert-danger"><%=data.error%></p>
<% }%>


  <div id="view" class="tabcontent">
    
    <div class="container">
        <table class="table table-striped tbl-class">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Category Name</th>
            </tr>
          </thead>
          <tbody>
            <!---This code is used to check if there is values in category then render it on browser-->
        <%  if(data.category.length) 
        {
          
        for(var i=0;i < data.category.length ; i++) { %>
    
          <tr>
            <th scope="row"><%= i+1  %></th>
            <td><%= data.category[i].name %></td>
          </tr>
          <% } } %>
          </tbody>
        </table>
      </div>
    
  </div>
  


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <form action="/category/" method="post">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create new category</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      
      <div class="modal-body">

        <div  class="form-group  ">
          <label>Name</label>
          <input   type="text" class="form-control" name="name"  
            placeholder="Enter Department name">
        </div>

          <div  class="form-group ">
            <label>Statement</label>
            <textarea type="text" class="form-control" name="description"  
              placeholder="Enter Description"></textarea>
          </div>

          

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </div>
  </form>
  </div>
</div>

  
  <script>
  function tabChange(evt, action) {
      $('#msg').css('display','none')
    var i, tabcontent, tablinks;
    tabcontent = document.getElementsByClassName("tabcontent");
    for (i = 0; i < tabcontent.length; i++) {
      tabcontent[i].style.display = "none";
    }
    tablinks = document.getElementsByClassName("tablinks");
    for (i = 0; i < tablinks.length; i++) {
      tablinks[i].className = tablinks[i].className.replace(" active", "");
    }
    document.getElementById(action).style.display = "block";
    evt.currentTarget.className += " active";
  }
  $(document).ready(function(){
    initial()
});
  function initial()
  {

     document.getElementById('view').style.display = "block";

  }
  </script>
</body>
<%- include ('./partials/footer.ejs') %>
</html>